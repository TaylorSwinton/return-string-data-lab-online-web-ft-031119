<h1>All Products</h1>

<% @products.each do |product| %>
  <%= product.name %>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-more").on('click', function() {
      let id = $(this).data("id");
      $.get("/product/" + id + "/body", function(data) {
        data;
      });
    });
  });
</script>
